<Window x:Class="WPFSoft.Views.EmployeeView1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSoft.Views"
        mc:Ignorable="d"
        Title="EmployeeView1" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Employee.Id}" IsEnabled="False" ></TextBox>
            <TextBox Text="{Binding Employee.FirstName}"></TextBox>
            <TextBox Text="{Binding Employee.LastName}"></TextBox>
            <TextBox Text="{Binding Employee.Age}"></TextBox>
            <TextBox Text="{Binding Employee.CompanyName}"></TextBox>
            <TextBox Text="{Binding Employee.Position}"></TextBox>
            <TextBox Text="{Binding Employee.CityName}"></TextBox>
        </StackPanel>
    </Grid>
</Window>
